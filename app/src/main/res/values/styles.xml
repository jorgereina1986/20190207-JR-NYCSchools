<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="details_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_details_school_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/fragment_details_title_layout_margin_bottom</item>
        <item name="android:layout_marginBottom">@dimen/fragment_details_title_layout_margin_top</item>

    </style>

    <style name="details_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_details_school_subtitle_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/fragment_details_school_subtitle_text_size</item>
    </style>

    <style name="details_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_details_school_info_text_size</item>
    </style>

    <style name="score_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_details_score_info_text_size</item>
        <item name="android:layout_marginTop">@dimen/fragment_details_score_info_margin_top</item>
    </style>

    <style name="scores_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_details_score_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/fragment_details_score_subtitle_margin_top</item>
    </style>

</resources>
